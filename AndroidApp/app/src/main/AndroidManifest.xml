<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.androidapp" >

    <!-- 授权访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 在sd卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".page.Page_Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".page.Page_Registered"
            android:label="@string/title_activity_registered" >
        </activity>
        <activity
            android:name=".page.Page_TotalActivity"
            android:label="@string/title_activity_total" >
        </activity>
        <activity
            android:name=".page.Page_Manage_Activity"
            android:label="@string/title_activity_user_manager" >
        </activity>
        <activity
            android:name=".page.Page_Information_User"
            android:label="@string/title_activity_user_information" >
        </activity>
        <activity
            android:name=".page.Page_OrganizeActivity"
            android:label="activity_page__organize" >
        </activity>
        <activity
            android:name=".page.Page_Information_Activity"
            android:label="@string/title_activity_page__activity_information" >
        </activity>
        <activity
            android:name=".page.Page_Message"
            android:label="@string/title_activity_page__message" >
        </activity>
        <activity
            android:name=".page.Page_Manage_Member"
            android:label="@string/title_activity_page__member_manager" >
        </activity>
        <activity
            android:name=".page.Page_Information_Others"
            android:label="@string/title_activity_page__others_information" >
        </activity>
        <activity
            android:name=".page.Page_Account"
            android:label="@string/title_activity_page__account" >
        </activity>
    </application>

</manifest>
