<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#50d2c2"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView20"
                android:src="@drawable/icon_user" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="花千骨"
            android:id="@+id/name"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通用户"
            android:id="@+id/identity"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView21"
                android:src="@drawable/icon_message" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:id="@+id/button5"
                android:background="#50d2c2"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:onClick="message_Click" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView22"
                android:src="@drawable/icon_person" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:id="@+id/button6"
                android:background="#50d2c2"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:onClick="userInfo_Click" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView28"
                android:src="@drawable/icon_manage" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:id="@+id/button3"
                android:background="#50d2c2"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:onClick="account_Click" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView23"
                android:src="@drawable/icon_manage" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="活动管理"
                android:id="@+id/button7"
                android:background="#50d2c2"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:onClick="manage_Click" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView24"
                android:src="@drawable/icon_exit" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:id="@+id/button8"
                android:background="#50d2c2"
                android:textSize="20dp"
                android:onClick="logout_Click"
                android:textColor="#ffffff" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView25"
                android:src="@drawable/main_logo"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"

            android:id="@+id/head"
            android:background="#ffffff"
            android:padding="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:src="@drawable/icon_user"
                android:layout_weight="0.126"
                android:onClick="head_Click"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="活动"
                android:id="@+id/title_activity"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="0.64"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/func"
                android:src="@drawable/icon_ellipses"
                android:layout_weight="0.126"
                android:paddingRight="20dp"
                android:onClick="func_Click" />

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:fadingEdge="none"
            android:id="@+id/navi"
            android:layout_below="@+id/head">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviAll_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_all"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="全部"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviOutSide_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_outside"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="户外"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviSport_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_sport"
                        android:layout_weight="0.8"
                        android:onClick="naviSport_Click" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="运动"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviPlay_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_play"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="玩乐"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviTravel_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_play"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="旅行"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviMusic_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_music"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="音乐"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:onClick="naviOther_Click">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/title_other"
                        android:layout_weight="0.8" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text="其他"
                        android:gravity="center"
                        android:layout_weight="0.2" />
                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll"
            android:layout_below="@+id/navi"
            android:scrollbars="none"
            android:layout_alignParentBottom="true"
            android:fillViewport="true"
            android:layout_marginTop="-3dp">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/content"
                    >
                </ListView>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>